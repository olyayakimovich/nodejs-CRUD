{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "strict": true,
    "rootDirs": ["src"],
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "lib": ["es6", "es2017"],
    "paths": {
      "src/*": ["src/*"]
    },
    "allowSyntheticDefaultImports": true
  },
  "typeRoots": ["node_modules/@types"],
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
